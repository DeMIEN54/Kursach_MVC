@model IEnumerable<Kurs_project.Models.Fuel>
@{
    ViewBag.Title = "ГСМ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ГСМ</h2>
<p>
    @Html.ActionLink("Создать новую запись", "Create", null, new { target = "_blank" })
</p>
@using (Html.BeginForm("Index", "Fuels", FormMethod.Get))
{



    <fieldset>
        Наименование гсм: @Html.TextBox("FuelFind", "")

        <input type="submit" value="Найти" />
    </fieldset>


}
<div class="table">
    @{var grid = new WebGrid(Model);}
    @grid.GetHtml(columns: grid.Columns(
    grid.Column("FuelID", "Номер гсм"),
    grid.Column("FuelType", "Тип Гсм"),
    grid.Column("Oktan", "Октановое число"),
    grid.Column("Cena", "Стоимость"),
    grid.Column("Data", "Дата"),
    grid.Column("About", "Примечание"),
    grid.Column(format: (item) => Html.ActionLink("Редактировать", "Edit", new { id = item.FuelID })),
    grid.Column(format: (item) => Html.ActionLink("Подробнее", "Details", new { id = item.FuelID })),
    grid.Column(format: (item) => Html.ActionLink("Удалить", "Delete", new { id = item.FuelID }))
    ))
</div>

