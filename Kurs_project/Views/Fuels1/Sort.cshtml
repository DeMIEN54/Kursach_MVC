
@{
    ViewBag.Title = "Sort";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Вывод данных о суммарном приходе(расходе) гсм за указанное время</h2>


<table class="table table-bordered table-hover">
    <tr>
        <th><a>Номер операции</a></th>
        <th><a>Тип гсм</a></th>
        <th><a>N емкости</a></th>
        <th><a>Суммарный расход/приход</a></th>
        <th><a href="@Url.Action("Index", "Fuels1")">Вернуться &raquo;</a></th>
    </tr>
    @{int i = 0;}
    @foreach (var o in ViewBag.time)
    {
        <tr>

            <td>
                @o.OperaciyaID
            </td>
            <td>
                @o.Fuel.FuelType
            <td>
                @o.Emkost.Nomer
            </td>
            <td>
                @ViewBag.summa[i]
            </td>            
            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = o.OperaciyaID }) |
                 @Html.ActionLink("Подробнее", "Details", new { id = o.OperaciyaID }) |
                @Html.ActionLink("Удалить", "Delete", new { id = o.OperaciyaID })
            </td>

        </tr>        
       i++;
    }
</table>