        <th>Дата операции</th>
        <th>Имя сотрудника</th>
        <th>Фамилия</th>        
        <th></th>       
    </tr>
                    @foreach (var o in ViewBag.time)
                    {
                        <tr>

                            <td>
                                @o.OperaciyaID
                            </td>
                            <td>
                                @o.Prih_rash
                            </td>
                            <td>
                                @o.Data_prih_rash
